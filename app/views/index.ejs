<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Machine Learning</title>
  </head>
  <body onload="initialLoad()">
    <div class="container">
      <div class="row">
        <div class="col-6">
          <canvas
            id="imageCanvas"
            width="240"
            height="297"
            style="border: 1px solid #d3d3d3;"
          >
            Upload an image here
          </canvas>
        </div>
        <div class="col-6">
          <form>
            <div class="form-group" id="formQuestion">
              <label for="exampleFormControlTextarea1">Example textarea</label>
              <textarea
                class="form-control"
                id="questionText"
                rows="3"
              ></textarea>
            </div>
          </form>
          <button class="btn btn-primary" onclick="submitQuestion()">
            Button
          </button>
        </div>
      </div>
    </div>
    <script>
      initialLoad = function () {
        var canvas = document.getElementById("imageCanvas");
        var context = canvas.getContext("2d");
        const img = new Image();
        img.src = "/images/1.png";
        img.onload = () => {
          context.drawImage(
            img,
            0,
            0,
            img.width,
            img.height, // source rectangle
            0,
            0,
            canvas.width,
            canvas.height
          );
        };
      };
    </script>
  </body>
</html>
